@model List<string>

@section inhead{
    <link rel="stylesheet" href="/css/ViewFile.css">
}

<div id="content">
    <h2>Select a file to view it's games</h2>
    <table class="contentTable">
        @*<thead>
            <tr>
                <td>filename</td>
            </tr>
        </thead>*@
        <tbody>
            @for (int index = 0; index < Model.Count(); index++) {
                var item = Model[index];
                var className = "contentRow1";
                if (index % 2 == 1) {
                    className = "contentRow2";
                }
                <tr class="@className">
                    <td>
                            <a class="@className" asp-controller="PgnViewer" asp-action="ViewFile" asp-route-filename="@item">@item</a>
                    </td>
                </tr>
            }
            </tbody>
    </table>

    <form asp-action="UploadFile"
          asp-controller="PgnViewer"
          method="Post"
          enctype="multipart/form-data">
        <input type="file" name="pgnfile" />
        <input type="submit" value="Upload pgn" />
    </form>
</div>